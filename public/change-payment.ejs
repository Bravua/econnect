        <div class="card shadow bg-light depcard mt-3">
            <h4 class="deph4">Change plan</h4>
            <p class="depp">Register your prefered plan</p>
            <div class="accdbg shadow">
               <div class="row">
                    <div class="col">
                        <h6 class="acch6a">MT5</h6>
                    </div>
                    <div class="col">
                        <h6 class="acch6">ACCOUNT NUMBER</h6>
                        <p class="accp">8082225459</p>
                    </div>
                    <div class="col">
                        <h6 class="acch6">SERVER</h6>
                        <p class="accp">Opay</p>
                    </div>
               </div>
               <div class="row py-2">
                    <div class="col">
                        <h6 class="acch6">ACCOUNT TYPE</h6>
                        <p class="accp">E-connect MT5</p>
                    </div>
                    <div class="col">
