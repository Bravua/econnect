    <!-- The proof Modal -->
<div class="modal" id="myModalcp">
    <div class="modal-dialog modal-fullscreen scrollable">
      <div class="modal-content prfm">
  
        <!-- Modal Header -->
        <div class="modal-header">
          <h4 class="modal-title prfh4">Post-transfer deposit confirmation</h4>
          <button type="button" class="btn-close bg-light" data-bs-dismiss="modal"></button>
        </div>
  
        <!-- Modal body -->
        <div class="modal-body">
          <p class="prfp">You can start your daily task in your personal area as soon as we've processed your deposit.</p>
          <div class="container">
            <form action="/admin/add-change_plan_payment" method="post">
                <div class="row">
                  <div class="col-md-6">
                    <label for="name">username:</label>
                    <input type="name" class="form-control" placeholder="" name="username">
                  </div>
                  <div class="col-md-6">
                    <label for="plan">new plan:</label>
                    <select class="form-select" id="sel1" name="plan">
                        <option value="bronze">bronze</option>
                        <option value="silver">silver</option>
                        <option value="gold">gold</option>
                        <option value="plantinum">Platinum</option>
                      </select>
                  </div>
                </div>
                <div class="row">
                    <div class="col-md-6 py-2">
                      <label for="amount">Transfer type:</label>
                      <input type="text" class="form-control" placeholder="online banking" name="p_type">
                    </div>
                    <div class="col col-md-6 py-2">
                      <label for="bank">Sender's bank:</label>
                      <input type="password" class="form-control" placeholder="" name="s_bank">
                    </div>
                  </div>
                  
                  <div class="row">
                    <div class="col-md-6 py-2">
                      <label for="amount">Payment date:</label>
                      <input type="date" class="form-control" placeholder="" name="date">
                    </div>
                    <div class="col-md-6 py-2">
                      <label for="bank">Payment proof:</label>
                      <input type="file" class="form-control" placeholder="choose file" name="proof">
                    </div>
                  </div>

                  <div class="clearfix mt-2"><button class="btn btn-success btn-sm float-right">CONFIRM REQUEST</button></div>
              </form>
          </div>
        </div>
  
        <!-- Modal footer -->
        <div class="modal-footer">
          <a type="button" href="/personal-area.html" class="btn">confirm</a>
        </div>
  
      </div>
